<p id="notice"><%= notice %></p>
<div class="title_and_entry">
  <h2 class="title"><%= Submission.find(params[:id]).title %></h2>

  <p class="entry">
    <strong>Entry:</strong>
    <%= Submission.find(params[:id]).entry %>
  </p>
</div>

<div class="code_box">
  <div class="html_box">
      <strong>HTML:</strong>
      <div class="html_field"><%= Submission.find(params[:id]).html %>
      </div>
  </div>
  <div class="css_box">
      <strong>CSS:</strong>
      <div class="css_field"><%= Submission.find(params[:id]).css %>
      </div>
  </div>
</div>

<% code = "<!DOCTYPE html><html><head>
  <meta charset='utf-8'>
  <title>My Portfolio Site</title>
  <style type='text/css'>
    #{Submission.find(params[:id]).css}
  </style>
</head>
<body> #{Submission.find(params[:id]).html}</body></html>" %>
<div class="iframe">
  <iframe srcdoc="<%= code %>" >
    <p>Your browser does not support iframes.</p>
  </iframe>
</div>


<%= link_to 'Edit', edit_submission_path(Submission.find(params[:id])) %> |
<%= link_to 'Submissions', submissions_path %>
