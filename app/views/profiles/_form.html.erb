<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
  </div>
  <div class="avatar_image_selector">
    <% i = 1 %>
    <% 12.times do |image| %>
      <li class="avatar_list_item">
        <div class="avatar_image" id="<%= i %>">
          <%= image_tag("#{i}.png", alt: "Avatar #{i}", class: "avatar_mini") %>
        </div>
      </li>
      <% i += 1 %>
    <% end %>
  </div>
  <div class="field">
    <%= f.hidden_field :avatar, value: "" %>
  </div>
  <div class="field">
    <%= f.label :about_me %><br>
    <%= f.text_area :about_me %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
