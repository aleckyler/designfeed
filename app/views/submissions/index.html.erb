<p id="notice"><%= notice %></p>

<p class="title">DesignFeed</p>
<h1>Listing Submissions</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Entry</th>
      <th>Responses</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.title %></td>
        <td><%= submission.entry %></td>
        <td><%= Response.where(submission_id: submission.id).count %></td>
        <td><%= Profile.where(user_id: submission.user_id).first.username %></td>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_submission_path %>
